<div class="container-fluid">
	<h1>Articles</h1>
	<ul class="list-group">
		{{#each articles}}
			<div class="article">
			  	<li class="list-group-item">{{this.title}}
					<button type="submit" style="float: right; position: relative;" class="delete" data-attr="{{_id}}">Delete Article</button>
					<button type="submit" style="float: right; position: relative;" class="btn btn-primary" data-attr="{{_id}}" data-toggle="modal" data-target="#myModal">Comment on Article</button>
			  	</li>
			  	<div id="myModal" class="modal fade">
				  <div class="modal-dialog" role="document">
				    <div class="modal-content">
				      <div class="modal-header">
				        <h5 class="modal-title">Leave a Comment</h5>
				        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
				          <span aria-hidden="true">&times;</span>
				        </button>
				      </div>
				      <div class="form-group">
					    <label for="exampleTextarea"></label>
					    <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
					  </div>
				      <div class="modal-footer">
				        <button type="button" class="btn btn-primary comment">Save Comment</button>
				      </div>
				    </div>
				  </div>
				</div>
			  	<li class="list-group-item">{{this.link}}</li>
			  	<li class="list-group-item">{{this.comment}}</li>
			  	<br>
			</div>
		{{/each}}
	</ul>
</div>
